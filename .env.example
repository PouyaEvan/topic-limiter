# Telegram Bot Token - Get it from @BotFather
BOT_TOKEN=your_bot_token_here

# Topic ID to monitor (from topic link, e.g., https://t.me/GroupName/1362 -> TOPIC_ID=1362)
TOPIC_ID=

# Allowed groups - comma-separated list of group chat IDs (empty = allow all groups)
# The bot will only respond in these groups
ALLOWED_GROUPS=-1001586540051,-1002957943244

# Message cooldown in hours (default: 24)
MESSAGE_COOLDOWN_HOURS=24

# How long to show warning message before deleting (seconds, default: 10)
WARNING_DELETE_SECONDS=10

# Admin cache TTL in seconds (default: 300 = 5 minutes)
ADMIN_CACHE_TTL=300

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
LOG_LEVEL=INFO

# Data directory for persistent storage (default: current directory)
# DATA_DIR=/app/data
